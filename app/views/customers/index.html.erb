<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Created at</th>
    <th>Company</th>
    <th>Actions</th>
  </tr>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <th><%= customer.first_name %></th>
      <th><%= customer.last_name %></th>
      <th><%= customer.email %></th>
      <th><%= customer.created_at %></th>
      <th><%= customer.company.name %></th>
      <th><%= link_to 'Edit', { action: :edit, id: customer.id } %> | <%= link_to 'Delete', { action: :destroy, id: customer.id }, method: :delete, data: { confirm: 'Are you sure?' } %></th> 
    </tr>
  <% end %>
  </tbody>
</table>

