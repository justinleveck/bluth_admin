<%= form_for(@customer) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label 'Company id' %>
  <%= f.text_field :company_id %>

  <% if action_name == 'new' %>
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  <% end %>

  <%= f.submit "Submit" %>
<% end %>
